<Window x:Class="DatabaseExampleWPF.MembersWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Manage Members" 
        Height="600" 
        Width="850"
        WindowStartupLocation="CenterScreen">

    <!-- 
    This window demonstrates CRUD operations for the Members table
    Also shows querying the one-to-many relationship (Member to Loans)
    Demonstrates email validation and ComboBox for fixed choices
    -->

    <Window.Resources>
        <!-- Button style -->
        <Style TargetType="Button">
            <Setter Property="Padding" Value="10,5"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Cursor" Value="Hand"/>
        </Style>

        <!-- TextBlock style -->
        <Style TargetType="TextBlock">
            <Setter Property="Margin" Value="5,5,5,2"/>
            <Setter Property="FontSize" Value="12"/>
        </Style>

        <!-- TextBox style -->
        <Style TargetType="TextBox">
            <Setter Property="Padding" Value="5"/>
            <Setter Property="Margin" Value="5,2,5,5"/>
            <Setter Property="FontSize" Value="12"/>
        </Style>

        <!-- ComboBox style -->
        <Style TargetType="ComboBox">
            <Setter Property="Padding" Value="5"/>
            <Setter Property="Margin" Value="5,2,5,5"/>
            <Setter Property="FontSize" Value="12"/>
        </Style>
    </Window.Resources>

    <!-- 
    Main Grid with two columns:
    - Left: DataGrid showing all members
    - Right: Form for add/edit operations and loans display
    -->
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <!-- Left column: proportional space -->
            <ColumnDefinition Width="350"/>
            <!-- Right column: fixed width for form -->
        </Grid.ColumnDefinitions>

        <!-- LEFT SIDE: Members List -->
        <Grid Grid.Column="0" Margin="10">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <!-- Header -->
                <RowDefinition Height="*"/>
                <!-- DataGrid -->
                <RowDefinition Height="Auto"/>
                <!-- Action buttons -->
            </Grid.RowDefinitions>

            <!-- Header -->
            <TextBlock Grid.Row="0" 
                       Text="Members List" 
                       FontSize="18" 
                       FontWeight="Bold"
                       Margin="5,5,5,10"/>

            <!-- DataGrid for displaying members -->
            <DataGrid Grid.Row="1"
                      x:Name="dgMembers"
                      AutoGenerateColumns="False"
                      IsReadOnly="True"
                      SelectionMode="Single"
                      CanUserAddRows="False"
                      CanUserDeleteRows="False"
                      GridLinesVisibility="Horizontal"
                      AlternatingRowBackground="#F5F5F5"
                      SelectionChanged="DgMembers_SelectionChanged"
                      Margin="5">

                <DataGrid.Columns>
                    <DataGridTextColumn Header="ID" 
                                        Binding="{Binding MemberID}" 
                                        Width="50"/>

                    <DataGridTextColumn Header="First Name" 
                                        Binding="{Binding FirstName}" 
                                        Width="*"/>

                    <DataGridTextColumn Header="Last Name" 
                                        Binding="{Binding LastName}" 
                                        Width="*"/>

                    <DataGridTextColumn Header="Email" 
                                        Binding="{Binding Email}" 
                                        Width="*"/>

                    <DataGridTextColumn Header="Type" 
                                        Binding="{Binding MemberType}" 
                                        Width="80"/>
                </DataGrid.Columns>
            </DataGrid>

            <!-- Action Buttons -->
            <StackPanel Grid.Row="2" 
                        Orientation="Horizontal" 
                        HorizontalAlignment="Center"
                        Margin="5">

                <Button x:Name="btnRefresh"
                        Content="🔄 Refresh List"
                        Click="BtnRefresh_Click"
                        Background="#2196F3"
                        Foreground="White"/>

                <Button x:Name="btnDelete"
                        Content="🗑️ Delete Selected Member"
                        Click="BtnDelete_Click"
                        Background="#F44336"
                        Foreground="White"/>
            </StackPanel>
        </Grid>

        <!-- RIGHT SIDE: Add/Edit Form and Loans Display -->
        <Grid Grid.Column="1" 
              Margin="10"
              Background="#F9F9F9">

            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <!-- Form header -->
                <RowDefinition Height="Auto"/>
                <!-- Member form -->
                <RowDefinition Height="*"/>
                <!-- Loans by member display -->
            </Grid.RowDefinitions>

            <!-- Form Header -->
            <Border Grid.Row="0" 
                    Background="#9C27B0" 
                    Padding="10"
                    Margin="0,0,0,10">
                <TextBlock x:Name="txtFormTitle"
                           Text="Add New Member" 
                           FontSize="16" 
                           FontWeight="Bold"
                           Foreground="White"
                           Margin="0"/>
            </Border>

            <!-- Member Entry Form -->
            <Border Grid.Row="1" 
                    Background="White" 
                    Padding="10"
                    Margin="0,0,0,10"
                    BorderBrush="#DDDDDD"
                    BorderThickness="1">

                <StackPanel>
                    <!-- First Name Field -->
                    <TextBlock Text="First Name *"/>
                    <TextBox x:Name="txtFirstName"
                             MaxLength="100"/>

                    <!-- Last Name Field -->
                    <TextBlock Text="Last Name *"/>
                    <TextBox x:Name="txtLastName"
                             MaxLength="100"/>

                    <!-- Email Field -->
                    <TextBlock Text="Email *"/>
                    <TextBox x:Name="txtEmail"
                             MaxLength="200"/>

                    <!-- Member Type Field -->
                    <!-- 
                    ComboBox for selecting member type
                    This demonstrates using a dropdown for fixed choices
                    rather than free text entry
                    -->
                    <TextBlock Text="Member Type *"/>
                    <ComboBox x:Name="cboMemberType">
                        <!-- 
                        ComboBoxItem: Each option in the dropdown
                        Content: The text displayed
                        -->
                        <ComboBoxItem Content="Student"/>
                        <ComboBoxItem Content="Teacher"/>
                        <ComboBoxItem Content="Staff"/>
                    </ComboBox>

                    <!-- Action Buttons -->
                    <StackPanel Orientation="Horizontal" 
                                HorizontalAlignment="Center"
                                Margin="0,15,0,0">

                        <Button x:Name="btnSave"
                                Content="💾 Save Member"
                                Click="BtnSave_Click"
                                Background="#4CAF50"
                                Foreground="White"
                                Width="125"/>

                        <Button x:Name="btnClear"
                                Content="🔄 Clear Form"
                                Click="BtnClear_Click"
                                Background="#9C27B0"
                                Foreground="White"
                                Width="125"/>
                    </StackPanel>

                    <!-- Info text -->
                    <TextBlock Text="* Required fields"
                               FontSize="10"
                               FontStyle="Italic"
                               Foreground="Gray"
                               HorizontalAlignment="Center"
                               Margin="0,10,0,0"/>
                </StackPanel>
            </Border>

            <!-- Loans by Member Display Section -->
            <!-- 
            This section demonstrates querying the one-to-many relationship
            One Member can have many Loans
            This is READ-ONLY display
            -->
            <Border Grid.Row="2" 
                    Background="White" 
                    Padding="10"
                    BorderBrush="#DDDDDD"
                    BorderThickness="1">

                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- Section Header -->
                    <TextBlock Grid.Row="0"
                               Text="Loans by Selected Member"
                               FontSize="14"
                               FontWeight="Bold"
                               Margin="5,5,5,10"/>

                    <!-- 
                    ListBox to display loans by this member
                    Populated from the Loans table WHERE MemberID = selected member
                    -->
                    <ListBox Grid.Row="1"
                             x:Name="lstMemberLoans"
                             Margin="5"
                             MinHeight="100">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <!-- 
                                Display loan information
                                We'll show basic Loan object info
                                In a real application, you might join to show book titles
                                -->
                                <StackPanel Margin="2">
                                    <TextBlock FontWeight="SemiBold">
                                        <Run Text="Loan ID: "/>
                                        <Run Text="{Binding LoanID}"/>
                                    </TextBlock>
                                    <TextBlock FontSize="10" Foreground="Gray">
                                        <Run Text="Book ID: "/>
                                        <Run Text="{Binding BookID}"/>
                                        <Run Text=" | Due: "/>
                                        <Run Text="{Binding DueDate, StringFormat='dd/MM/yyyy'}"/>
                                    </TextBlock>
                                    <!-- 
                                    Display return status
                                    -->
                                    <TextBlock FontSize="10">
                                        <Run Text="Status: "/>
                                        <Run Text="{Binding Status}"/>
                                    </TextBlock>
                                </StackPanel>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>

                    <!-- Note TextBlock - shown when no member is selected -->
                    <TextBlock Grid.Row="0" Grid.RowSpan="2"
                               x:Name="txtNoMemberSelected"
                               Text="Select a member from the list to see their loan history"
                               TextWrapping="Wrap"
                               VerticalAlignment="Center"
                               HorizontalAlignment="Center"
                               Foreground="Gray"
                               FontStyle="Italic"
                               Margin="20"/>
                </Grid>
            </Border>
        </Grid>
    </Grid>
</Window>